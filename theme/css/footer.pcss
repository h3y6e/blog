.page-foot {
  padding: 40px 0;
  opacity: 0.5;

  & a {
    color: inherit;
    &:hover {
      color: var(--accent);
    }
  }

  & .copyright {
    display: flex;
    flex-direction: row;
    align-items: center;

    @media (--tablet) {
      flex-direction: column;
      margin-top: 10px;
    }
  }
}
